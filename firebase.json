{
  "hosting": {
    "target": "production",
    "public": ".",
    "ignore": [
      "firebase.json",
      "firestore.rules",
      "storage.rules",
      ".firebaserc",
      ".github/**",
      ".git/**"
    ],
    "rewrites": [
      {
        "source": "/add_subscriber",
        "run": {
          "serviceId": "handleAddSubscriber",
          "region": "us-central1"
        }
      },
      {
        "source": "/send_feedback_email",
        "run": {
          "serviceId": "handleSendFeedback",
          "region": "us-central1"
        }
      },
      {
        "source": "/send_sponsorship_email",
        "run": {
          "serviceId": "handleSendSponsorship",
          "region": "us-central1"
        }
      },
      {
        "source": "/profile/**",
        "function": "handleGetProfile"
      },
      {
        "source": "/update_profile/**",
        "function": "handleUpdateProfile"
      },
      {
        "source": "/achievements",
        "function": "handleGetAchievements"
      },
      {
        "source": "/assign_achievement",
        "function": "handleAssignAchievement"
      },
      {
        "source": "/leaderboard",
        "function": "handleGetLeaderboard"
      },
      {
        "source": "/auto_award_achievement",
        "function": "handleAutoAwardAchievement"
      },
      {
        "source": "/achievement_progress/**",
        "function": "handleGetAchievementProgress"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs20"
    },
    {
      "source": "functions_python",
      "codebase": "python-api",
      "runtime": "python312"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
