{
  "hosting": {
    "target": "production",
    "public": ".",
    "ignore": [
      "firebase.json",
      "firestore.rules",
      "storage.rules",
      ".firebaserc",
      ".github/**",
      ".git/**"
    ],
    "rewrites": [
      {
        "source": "/add_subscriber",
        "function": "handleAddSubscriber@python-api"
      },
      {
        "source": "/send_feedback_email",
        "function": "handleSendFeedback@python-api"
      },
      {
        "source": "/send_sponsorship_email",
        "function": "handleSendSponsorship@python-api"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs20"
    },
    {
      "source": "functions_python",
      "codebase": "python-api",
      "runtime": "python312"
    }
  ]
}
