{
  "name": "redsracing-frontend",
  "version": "2.3.0",
  "description": "RedsRacing #8 Frontend",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./styles/tailwind.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./styles/tailwind.css --minify",
    "build": "npx webpack",
    "inject-sentry-dsn": "node scripts/inject-sentry-dsn.js",
    "analyze": "npx webpack --profile --json > stats.json && npx webpack-bundle-analyzer stats.json",
    "lint:firebase-imports": "node scripts/validate_firebase_imports.js"
  },
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "tailwindcss": "^3.4.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "private": true,
  "dependencies": {
    "@sentry/browser": "^10.14.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/replay": "^7.116.0",
    "@sentry/tracing": "^7.120.4",
    "firebase": "^12.3.0"
  }
}
