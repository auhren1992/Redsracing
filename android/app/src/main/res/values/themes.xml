<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Redsracing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/website_background</item>
        <item name="android:navigationBarColor">@color/website_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:colorBackground">@color/website_background</item>
    </style>

    <!-- Splash theme for Android 12+ (with backward-compat via core-splashscreen) -->
    <style name="Theme.Redsracing.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/website_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Redsracing</item>
    </style>
</resources>
