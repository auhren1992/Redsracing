<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05080F">

    <!-- Main WebView (full screen like iOS) -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Loading indicator (like iOS) -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="#F7FF00"
        android:visibility="gone" />

    <!-- Splash screen overlay (like iOS) -->
    <FrameLayout
        android:id="@+id/splashContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo: REDS RACING -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REDS"
                    android:textColor="#00C6FF"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RACING"
                    android:textColor="#F7FF00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>

            <!-- Subtitle #8 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#8"
                android:textColor="#B3FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <!-- Loading spinner -->
            <ProgressBar
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="40dp"
                android:indeterminateTint="#F7FF00" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
