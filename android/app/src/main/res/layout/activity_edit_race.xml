<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditRaceActivity">

    <EditText
        android:id="@+id/editRaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Race/Track Name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editRaceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (YYYY-MM-DD)"
        android:inputType="date"
        android:layout_marginBottom="16dp"/>

    <!-- In a real app, you might have more fields for type, race number, etc. -->
    <!-- For now, we'll keep it simple. -->

    <Button
        android:id="@+id/saveRaceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Race" />

    <Button
        android:id="@+id/deleteRaceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Race"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>
